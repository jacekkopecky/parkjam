<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="currpark">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/currpark_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@color/currpark_background</item>
        <item name="android:paddingTop">1mm</item>        
        <item name="android:paddingLeft">1mm</item>        
        <item name="android:paddingRight">1mm</item>        
        <item name="android:paddingBottom">1mm</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="currpark_container">
        <item name="android:background">@color/currpark_background</item>
    </style>
    <style name="currpark_text">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/currpark_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="status_text">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:background">@color/currpark_background</item>
        <item name="android:textSize">@dimen/currpark_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="addpark_btn_text">
        <item name="android:textColor">@color/addpark_btn_text</item>
        <item name="android:textSize">@dimen/addpark_btn_text_size</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="currpark.addpark">
        <item name="android:textSize">@dimen/addpark_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingTop">0mm</item>        
    </style>
    
    <style name="currpark_text.details">
        <item name="android:textSize">@dimen/currpark_details_text_size</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="details">
        <item name="android:background">#8000</item>
        <item name="android:textColor">@color/default_details_text</item>
        <item name="android:textSize">@dimen/details_text_size</item>
        <item name="android:typeface">sans</item>
    </style>
    
